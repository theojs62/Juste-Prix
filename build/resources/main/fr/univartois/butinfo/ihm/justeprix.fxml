<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="227.0" prefWidth="365.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.butinfo.ihm.JustePrixController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="welcomeText" text="Trouve le bon prix !  " />
   <HBox prefHeight="27.0" prefWidth="288.0">
      <children>
         <TextField fx:id="answer" prefHeight="27.0" prefWidth="204.0" text="Entre votre prix" />
         <Button mnemonicParsing="false" onAction="#onConfirmButtonClick" prefHeight="26.0" prefWidth="96.0" text="Deviner" />
      </children>
   </HBox>
   <HBox prefHeight="0.0" prefWidth="200.0">
      <children>
         <Label fx:id="clue" prefHeight="18.0" prefWidth="87.0" text="Indice " />
         <Label fx:id="pointLabel" text="point" />
      </children>
   </HBox>
   <HBox prefHeight="26.0" prefWidth="255.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onSolutionButtonClick" prefHeight="26.0" prefWidth="92.0" text="Solution" />
         <Button mnemonicParsing="false" onAction="#onRestartButtonClick" text=" Recommencer" textAlignment="CENTER">
            <HBox.margin>
               <Insets bottom="5.0" left="60.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <Label fx:id="nombredev" text="Vos nombres deviner" />
</VBox>
